<h1><%= @doctor.name %></h1>

<section class='info'>
  <p><%= @doctor.hospital.name %></p>
  <%= link_to "Assign #{@doctor.name} to a Different Hospital", "/doctors/#{@doctor.id}/edit" %>
  <p><%= @doctor.speciality %></p>
  <p><%= @doctor.education %></p>
</section>

<section class='patients'>
  <% if @doctor.patients.empty? %>
    <p>This Doctor has no patients.</p>
  <% else%>
    <% @doctor.patients.each do |patient| %>
      <p>Name: <%= patient.name %></p>
      <%= link_to "Remove Patient From Caseload", "/doctors/#{@doctor.id}/patients" %></p>
    <% end %>
  <% end %>
</section>
